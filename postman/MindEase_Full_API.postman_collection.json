  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Dev Login Admin",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/dev/login-test",
              "host": ["{{baseUrl}}"],
              "path": ["dev", "login-test"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.environment.set('adminToken', json.token);",
                  "if (json.user && json.user.id) { pm.environment.set('adminUserId', json.user.id); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Dev Login User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
